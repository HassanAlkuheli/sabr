# ─── Application ─────────────────────────────────
PORT=3000
JWT_SECRET=REPLACE_ME_JWT_SECRET
DEPLOY_DOMAIN=sabr.localhost

# ─── Database ────────────────────────────────────
POSTGRES_USER=postgres
POSTGRES_PASSWORD=REPLACE_ME_DB_PASSWORD
POSTGRES_DB=sabr
DATABASE_URL=postgresql://postgres:REPLACE_ME_DB_PASSWORD@localhost:5434/sabr

# ─── MinIO (S3-Compatible Storage) ───────────────
MINIO_ENDPOINT=localhost
MINIO_PORT=9002
MINIO_ACCESS_KEY=REPLACE_ME_MINIO_ACCESS_KEY
MINIO_SECRET_KEY=REPLACE_ME_MINIO_SECRET_KEY
MINIO_USE_SSL=false
MINIO_ROOT_USER=REPLACE_ME_MINIO_ROOT_USER
MINIO_ROOT_PASSWORD=REPLACE_ME_MINIO_ROOT_PASSWORD
MINIO_BUCKET=sabr

# ─── Runner ──────────────────────────────────────
RUNNER_TIMEOUT_MINUTES=30
VIEWER_TIMEOUT_MINUTES=30
MAX_UPLOAD_SIZE_MB=50

# ─── pgAdmin ────────────────────────────────────
PGADMIN_DEFAULT_EMAIL=admin@sabr.com
PGADMIN_DEFAULT_PASSWORD=admin123
