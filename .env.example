# ─── Application ─────────────────────────────────
PORT=3000
JWT_SECRET=your-super-secret-jwt-key-at-least-16-chars
DEPLOY_DOMAIN=sabr.localhost

# ─── Database ────────────────────────────────────
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=sabr
DATABASE_URL=postgresql://postgres:postgres@localhost:5434/sabr

# ─── MinIO (S3-Compatible Storage) ───────────────
MINIO_ENDPOINT=localhost
MINIO_PORT=9002
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_BUCKET=sabr

# ─── Runner ──────────────────────────────────────
RUNNER_TIMEOUT_MINUTES=30
VIEWER_TIMEOUT_MINUTES=30
MAX_UPLOAD_SIZE_MB=50

# ─── pgAdmin ────────────────────────────────────
PGADMIN_DEFAULT_EMAIL=admin@sabr.com
PGADMIN_DEFAULT_PASSWORD=admin123
